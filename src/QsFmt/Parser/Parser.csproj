<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>Microsoft.Quantum.QsFmt.Parser</AssemblyName>
    <RootNamespace>$(AssemblyName)</RootNamespace>
    <!-- Disable warnings for generated code. -->
    <NoWarn>$(NoWarn);CS1584;CS1658</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Antlr4 Include="$(ProjectDir)/../../../qsharp-language/Specifications/Language/5_Grammar/*.g4">
      <Listener>false</Listener>
      <Visitor>true</Visitor>
      <Package>$(RootNamespace)</Package>
      <Error>true</Error>
    </Antlr4>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.11.1" />
    <PackageReference Include="Antlr4BuildTasks" Version="11.5.0" PrivateAssets="all" />
  </ItemGroup>

</Project>
